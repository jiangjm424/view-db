<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/database_db_card_bg"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dbNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/database_db_card_text_primary"
                android:textSize="18sp"
                tools:text="sample.db" />

            <ImageView
                android:id="@+id/lock"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:src="@drawable/ic_lock" />

            <TextView
                android:id="@+id/dbPathText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:textColor="@color/database_db_card_text_secondary"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="/data/data/com.example.glance/databases/sample.db" />

            <TextView
                android:id="@+id/modifyTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/database_db_card_text_secondary"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Last modified 2020-08-29" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
